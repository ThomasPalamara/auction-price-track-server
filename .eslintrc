{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "linebreak-style": "off",
    "no-use-before-define": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ]
  }
}
